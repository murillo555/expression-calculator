{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": [
      "/types",
      "/node_modules/@types"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@logger": [
        "libs/logger.ts"
      ]
    }
  },
  "types": [
    "@types/jest",
    "node",
    "jest"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}